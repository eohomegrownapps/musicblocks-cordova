<?xml version='1.0' encoding='utf-8'?>
<widget id="org.sugarlabs.musicblocks" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MusicBlocks</name>
    <description>
        A musical microworld
    </description>
    <author email="walterbender@sugarlabs.org" href="walterbender.github.io">
        Walter Bender
    </author>
    <icon src="res/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="permissions" value="none" />
    <preference name="fullscreen" value="true" />
    <preference name="uiwebviewbounce" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="disallowoverscroll" value="true" />
    <engine name="ios" spec="~4.4.0" />
    <engine name="android" spec="~6.2.3" />
    <engine name="osx" spec="~4.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
